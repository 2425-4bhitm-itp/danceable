{
  "name": "my-webpack-project",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "start": "npm run serve & npm run tailwind:watch",
    "serve": "webpack serve --open",
    "tailwind:watch": "npx @tailwindcss/cli -i ./tailwindBase.css -o src/style/tailwind.css --watch",
    "tailwind": "npx @tailwindcss/cli -i ./tailwindBase.css -o src/style/tailwind.css",
    "build": "webpack --mode=production --node-env=production",
    "build:dev": "webpack --mode=development",
    "build:prod": "webpack --mode=production --node-env=production",
    "build:loaders": "npx tsc --declaration ./src/loaders/template-loader.ts",
    "watch": "webpack --watch",
    "prestart": "npm run build:loaders",
    "prebuild": "npm run build:loaders"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "My webpack project",
  "devDependencies": {
    "@tailwindcss/postcss": "^4.0.4",
    "@types/webpack": "^5.28.5",
    "@types/webpack-dev-server": "^4.7.1",
    "@webpack-cli/generators": "^2.5.0",
    "copy-webpack-plugin": "^13.0.0",
    "css-loader": "^7.1.2",
    "html-loader": "^5.1.0",
    "html-webpack-plugin": "^5.6.0",
    "mini-css-extract-plugin": "^2.9.1",
    "postcss": "^8.4.47",
    "postcss-loader": "^8.1.1",
    "postcss-preset-env": "^10.0.9",
    "prettier": "^3.3.3",
    "prettier-plugin-tailwindcss": "^0.6.11",
    "style-loader": "^4.0.0",
    "tailwindcss": "^4.0.0",
    "ts-loader": "^9.5.1",
    "typescript": "^5.8.2",
    "webpack": "^5.96.1",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^5.1.0"
  }
}
