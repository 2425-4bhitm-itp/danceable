{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowJs": true,
    "baseUrl": ".",
    "target": "ES2022",         // or "ES6", "ES2017", "ES2020"
//    "lib": ["DOM", "ES2022"],    // Include ES2015 library for Promise and async/await support
    "module": "ES2022",
    "moduleResolution": "bundler",
//    "esModuleInterop": true,
//    "skipLibCheck": true,
//    "resolveJsonModule": true,
