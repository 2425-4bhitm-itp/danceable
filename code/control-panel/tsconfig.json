{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": true,
    "allowJs": true,
    "baseUrl": "./",
    "target": "ES2022",         // or "ES6", "ES2017", "ES2020"
    "lib": ["DOM", "ES2022"],    // Include ES2015 library for Promise and async/await support
    "module": "ESNext",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true
  },
  "typeRoots": [
    "./node_modules/@types",
    "./src/loaders"
  ],
  "files": ["./src/index.ts"]
}


